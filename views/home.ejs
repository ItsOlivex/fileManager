<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Boxicons -->
  <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
  <!-- My CSS -->
  <link rel="stylesheet" href="/home/style.css">
  <link rel="stylesheet" href="/home/partials/file-manager.css">
    <link rel="stylesheet" href="/home/partials/accounts-manager.css">
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <title>MyFiles | Home page</title>

<body ng-app="myApp" ng-controller="myCtrl">

  <section class="blur">
    <div class="content">
      <div class="blur-title">
        <h1></h1>
      </div>
      <div class="blur-buttons">
        <input type="button" class="confirm" value="Confirm" ng-click="confirm()">
        <input type="button" value="Cancel" ng-click="removeBlur()">
      </div>
    </div>
  </section>


  <!-- SIDEBAR -->
  <section id="sidebar">
    <a href="#" class="brand">
      <i class="fa-regular fa-file"></i>
      <span class="text">MyFiles</span>
    </a>
    <ul class="side-menu top">
      <li class="active">
        <a href="#">
          <i class='bx bxs-dashboard'></i>
          <span class="text">Dashboard</span>
        </a>
      </li>
      <li>
        <a href="#">
          <i class='bx bxs-file'></i>
          <span class="text">My Files</span>
        </a>
      </li>
      <li>
        <a href="#">
          <i class='bx bxs-doughnut-chart'></i>
          <span class="text">Text Editor</span>
        </a>
      </li>
    </ul>
    <ul class="side-menu">
      <% if (permission == 1) { %>
      <li>
        <a href="#">
          <i class='bx bxs-cog'></i>
          <span class="text">Accounts</span>
        </a>
      </li>
      <% } %>
      <li>
        <form action="/logout" method="get" class="logout">
          <i class='bx bxs-log-out-circle'></i>
          <label class="text" for="submit">
            Log out
            <input type="submit" id="submit" style="display: none;">
          </label>
        </form>
      </li>
    </ul>
  </section>
  <!-- SIDEBAR -->



  <!-- CONTENT -->
  <section id="content">
    <!-- NAVBAR -->
    <nav>
      <div class="nav-item">
        <i class='bx bx-menu'></i>
        <a href="#" class="nav-link"></a>
      </div>
      <div class="nav-item">
        <input type="checkbox" id="switch-mode" hidden>
        <label for="switch-mode" class="switch-mode"></label>
        <a href="#" class="notification">
          <i class='bx bxs-bell'></i>
          <span class="num">8</span>
        </a>
        <a href="#" class="profile">
          <img src="">
        </a>
      </div>
    </nav>
    <!-- NAVBAR -->

    <!-- MAIN -->
    <main>

      <%- include('./partials/dashboard.ejs') %>
      <%- include('./partials/file-manager.ejs') %>
      <div class="main-item">

      </div>
      <%- include('./partials/accounts.ejs'); %>







    </main>
    <!-- MAIN -->
  </section>
  <!-- CONTENT -->


  <script type="module" src="/home/script.js"></script>
  <script type="module" src="/home/partials/app.js"></script>
</body>

</html>